{{#if addNewPost}}
<h1>New Post</h1>
<div>
  <form>
    <div class="form-group">
      <label for="date">Date</label>
      {{input value=date id="date"}}
    </div>

    <div class="form-group">
      <label for="title">Title</label>
      {{input value=title id="title"}}
    </div>

    <div class="form-group">
      <label for="time">Bake Time</label>
      {{input value=time id="time"}}
    </div>

    <div class="form-group">
      <label for="serving">Number of Servings</label>
      {{input value=serving id="serving"}}
    </div>

    <div class="form-group">
      <label for="text">Text Body</label>
      {{input value=text id="text"}}
    </div>

    <button {{action 'save1'}}>Save</button>
  </form>
</div>
{{else}}
  <button {{action 'postFormShow'}}>New Post</button>
{{/if}}
