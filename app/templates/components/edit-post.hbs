{{#if editPostForm}}
  <h4>Edit {{post.title}}</h4>
  <div>
    <form>
      <div class="form-group">
        <label for="date">Date</label>
        {{input value=date id="date" placeholder=post.date}}
      </div>

      <div class="form-group">
        <label for="title">Title</label>
        {{input value=title id="title" placeholder=post.title}}
      </div>

      <div class="form-group">
        <label for="time">Time</label>
        {{input value=time id="time" placeholder=post.time}}
      </div>

      <div class="form-group">
        <label for="serving">Number of Servings</label>
        {{input value=serving id="serving" placeholder=post.serving}}
      </div>

      <div>
        <label for="text">Text Body</label>
        {{textarea rows="5" cols="100" value=text id="text" placeholder=post.text}}
      </div>

      <button {{action 'edit' post}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'editPostForm'}}>Edit</button>
{{/if}}
